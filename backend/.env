# Configuration du générateur de posts LinkedIn

# Credentials LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_REFRESH_TOKEN=

# Configuration du service AI (Claude uniquement)
DEFAULT_AI_PROVIDER=claude
CLAUDE_API_KEY=

# Configuration du serveur
NODE_ENV=development
BACKEND_PORT=5000
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Options de génération de posts
MAX_POST_LENGTH=3000
TONE_OPTIONS=professionnel,casual,inspirant,informatif,humoristique,formel,storytelling

# Paramètres de publication LinkedIn
AUTO_PUBLISH_ENABLED=false
DRAFT_MODE=true
POST_VISIBILITY=CONNECTIONS

# Logging et débogage
LOG_LEVEL=info
DEBUG_MODE=false
